<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

    tools:context="com.example.juana.smartfarm.MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <android.support.v7.widget.CardView
        app:cardPreventCornerOverlap="false"
        android:elevation="10dp"
        app:cardBackgroundColor="#FF5733 "
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/tempBar"
            android:layout_gravity="center"
            app:donut_text_color="#000000"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/tempText"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/temptxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tempVal"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
   
    <android.support.v7.widget.CardView
        android:elevation="10dp"
        app:cardBackgroundColor="#98f5ff"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/humidityBar"
                app:donut_text_color="#000000"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <TextView
                android:id="@+id/humidityText"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/humiditytxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/humidityVal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#67ac15 "
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/soil_moistureBar"
                app:donut_text_color="#000000"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <TextView
                android:id="@+id/soil_moistureText"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/soil_moisturetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/soil_moistureVal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/stopAlarm"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textSize="15sp"

        android:background="@drawable/buttonbackground"
        android:text="@string/buzzer"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
